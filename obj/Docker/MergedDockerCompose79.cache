configs:
  redis-stack.conf:
    file: D:\Projects\MadMagic\redis-stack.conf
services:
  madmagic:
    build:
      context: D:\Projects\MadMagic
      dockerfile: MvcMadMagic/Dockerfile
    depends_on:
      redisapi:
        condition: service_started
    image: madmagic
    ports:
    - published: 8080
      target: 80
    - published: 8081
      target: 443
  redis_db:
    configs:
    - source: redis-stack.conf:/redis-stack.conf
    image: redis/redis-stack
    ports:
    - published: 8001
      target: 8001
    - published: 6379
      target: 6379
    volumes:
    - D:\Projects\MadMagic\redis_data:/data:rw
    - D:\Projects\MadMagic\redis-dumb:/var/lib/redis:rw
  redisapi:
    build:
      context: D:\Projects\MadMagic
      dockerfile: RedisApi/Dockerfile
    depends_on:
      redis_db:
        condition: service_started
    image: redisapi
    ports:
    - published: 5000
      target: 80
    - published: 5001
      target: 5000
version: '3.9'
volumes:
  redis-dumb:
    driver: ./redis-dumb
    external: false
  redis_data:
    driver: ./redis_data
    external: false